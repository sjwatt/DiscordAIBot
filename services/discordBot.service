[Unit]
Description=Discord Bot
After=graphical.target

[Service]
Type=idle
User=llm
WorkingDirectory=/home/llm/DiscordBot
ExecStart=/home/llm/anaconda3/bin/python /home/llm/DiscordBot/bot.py --debug
Restart=always
RestartSec=3

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=discordBot

[Install]
WantedBy=multi-user.target
